<Window x:Class="OstoskärrySovellus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ostoskärry" Height="473" Width="838">
    <Grid Background="#F0F8FF">
        <StackPanel Margin="10">
            <TextBlock FontSize="20" FontWeight="Bold" Text="Valitse tuotteet:" Margin="0,0,0,10"/>
            <CheckBox Name="tuote1" Content="Tuote 1" Margin="0,0,0,5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="tuote2" Content="Tuote 2" Margin="0,0,0,5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="tuote3" Content="Tuote 3" Margin="0,0,0,5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox Name="tuote4" Content="Tuote 4" Margin="0,0,0,5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <TextBlock FontSize="20" FontWeight="Bold" Text="Ostoskärry:" Margin="20,20,0,10"/>
            <StackPanel Name="kärryPaneeli" Background="White" Height="100" VerticalAlignment="Top"/>
            <Button Content="Osta" Click="Osta_Click" Margin="0,20,0,0" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

